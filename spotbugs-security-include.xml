<?xml version="1.0" encoding="UTF-8"?>
<FindBugsFilter xmlns="https://github.com/spotbugs/filter/3.0.0" 
                xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                xsi:schemaLocation="https://github.com/spotbugs/filter/3.0.0 
                https://raw.githubusercontent.com/spotbugs/spotbugs/3.1.0/spotbugs/etc/findbugsfilter.xsd">
    
    <!-- Security-focused bug patterns to include -->
    <Match>
        <Bug category="SECURITY"/>
    </Match>
    
    <Match>
        <Bug pattern="SQL_INJECTION_SPRING_JDBC"/>
    </Match>
    
    <Match>
        <Bug pattern="XSS_REQUEST_PARAMETER_TO_SEND_ERROR"/>
    </Match>
    
    <Match>
        <Bug pattern="XSS_REQUEST_PARAMETER_TO_JSP_WRITER"/>
    </Match>
    
    <Match>
        <Bug pattern="HARD_CODE_PASSWORD"/>
    </Match>
    
    <Match>
        <Bug pattern="WEAK_RANDOM"/>
    </Match>
    
    <Match>
        <Bug pattern="PREDICTABLE_RANDOM"/>
    </Match>
    
    <Match>
        <Bug pattern="INSECURE_COOKIE"/>
    </Match>
    
    <Match>
        <Bug pattern="HTTPONLY_COOKIE"/>
    </Match>
    
    <Match>
        <Bug pattern="SECURE_COOKIE"/>
    </Match>
    
    <Match>
        <Bug pattern="TRUST_BOUNDARY_VIOLATION"/>
    </Match>
    
    <Match>
        <Bug pattern="PATH_TRAVERSAL_IN"/>
    </Match>
    
    <Match>
        <Bug pattern="COMMAND_INJECTION"/>
    </Match>
    
    <Match>
        <Bug pattern="LDAP_INJECTION"/>
    </Match>
    
    <Match>
        <Bug pattern="XPATH_INJECTION"/>
    </Match>
</FindBugsFilter>
